    },
    {
      "name": "permissions",
      "description": "Управление разрешениями"
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "cookie": {
        "type": "apiKey",
        "in": "cookie",
        "name": "access_token"
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Имя пользователя",
            "example": "john_doe",
            "minLength": 3
          },
          "email": {
            "type": "string",
            "description": "Уникальный email пользователя",
            "example": "john_doe@example.com"
          },
          "password": {
            "type": "string",
            "description": "Пароль пользователя",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": [
          "username",
          "email",
          "password"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "isActive": {
            "type": "boolean",
            "description": "Статус активности пользователя",
            "example": true
          },
          "isVerified": {
            "type": "boolean",
            "description": "Статус верификации пользователя",
            "example": true
          }
        }
      },
      "UpdatePasswordDto": {
        "type": "object",
        "properties": {
          "newPassword": {
            "type": "string",
            "description": "Новый пароль",
            "example": "newPassword123",
            "minLength": 6
          },
          "previousPassword": {
            "type": "string",
            "description": "Старый пароль",
            "example": "newPassword123",
            "minLength": 6
          }
        },
        "required": [
          "newPassword",
          "previousPassword"
        ]
      },
      "CreateRoleDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Название роли",
            "example": "user",
            "minLength": 3
          }
        },
        "required": [
          "name"
        ]
      },
      "UpdateRoleDto": {
        "type": "object",
        "properties": {}
      },
      "CreatePermissionDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Название разрешения",
            "example": "can_read:users",
            "minLength": 3
          }
        },
        "required": [
          "name"
        ]
      },
      "UpdatePermissionDto": {
        "type": "object",
        "properties": {}
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Имя пользователя",
            "example": "john_doe"
          },
          "password": {
            "type": "string",
            "description": "Пароль пользователя",
            "example": "password123"
          }
        },
        "required": [
          "username",
          "password"
        ]
      }
    }
